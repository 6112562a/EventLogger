<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  全局颜色  -->
    <!--蓝色-->
    <Color x:Key="GlobeBlueColor" A="255" R="30" G="144" B="255"/>
    <!--灰色-->
    <Color x:Key="GlobeGrayColor" A="255" R="169" G="169" B="169"/>
    <!--画笔-->
    <SolidColorBrush x:Key="GlobeBlueBrush" Color="{StaticResource GlobeBlueColor}"></SolidColorBrush>
    <SolidColorBrush x:Key="GlobeGrayBrush" Color="{StaticResource GlobeGrayColor}"></SolidColorBrush>
    <SolidColorBrush x:Key="GlobeLightGrayBrush" Color="{StaticResource GlobeGrayColor}" Opacity="0.7"/>
</ResourceDictionary>